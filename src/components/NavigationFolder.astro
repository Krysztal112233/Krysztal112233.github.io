---
import { Icon } from "astro-icon/components";
---

<div class="dropdown dropdown-end lg:hidden">
    <button tabindex="0" role="button" class="btn btn-ghost mr-2">
        <Icon name="material-symbols:menu" class="text-2xl" />
    </button>

    <ul
        tabindex="0"
        class="dropdown-content menu bg-base-100 rounded-box z-1 mt-14 w-52 p-2 shadow backdrop-blur-md"
    >
        <slot />
    </ul>
</div>

<ul class="menu menu-horizontal hidden items-center px-1 text-lg lg:flex">
    <slot />
</ul>
